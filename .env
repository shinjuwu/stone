# GameHub 容器化環境配置檔案
# 複製此檔案為 .env 並修改對應的值

# ===========================================
# 數據庫配置 (PostgreSQL)
# ===========================================
POSTGRES_DB=gamehub
POSTGRES_USER=gamehub
POSTGRES_PASSWORD=gamehub123
POSTGRES_PORT=5432

# ===========================================
# Redis 配置
# ===========================================
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# ===========================================
# GameHub 服務配置
# ===========================================
SERVER_ID=1
PLATFORM=DEV
LOG_LEVEL=3

# 端口配置
GAMEHUB_WS_PORT=3563
GAMEHUB_TCP_PORT=3564
GAMEHUB_HTTP_PORT=8080

# ===========================================
# Web 服務配置
# ===========================================
HTTP_PORT=80
HTTPS_PORT=443

# ===========================================
# 工具服務端口
# ===========================================
SLOT_EDITOR_PORT=8081

# ===========================================
# 監控服務配置
# ===========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin123

# ===========================================
# 外部平台配置
# ===========================================
PLATFORM_API_URL=https://your-platform-api.com
PLATFORM_API_KEY=your-api-key

# ===========================================
# SSL 證書配置 (生產環境)
# ===========================================
SSL_CERT_PATH=./docker/nginx/ssl/cert.pem
SSL_KEY_PATH=./docker/nginx/ssl/key.pem

# ===========================================
# 備份配置
# ===========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30