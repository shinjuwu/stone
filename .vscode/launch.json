{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch GameHub Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/GameHub",
            "args": [
                "-conf", "${workspaceFolder}/docker/config/GameHub.dev.conf",
                "-log", "${workspaceFolder}/logs"
            ],
            "cwd": "${workspaceFolder}/GameHub",
            "env": {
                "CGO_ENABLED": "0"
            },
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "showLog": true,
            "trace": "verbose",
            "logOutput": "rpc"
        },
        {
            "name": "Debug GameHub Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/GameHub",
            "args": [
                "-conf", "${workspaceFolder}/docker/config/GameHub.dev.conf",
                "-log", "${workspaceFolder}/logs"
            ],
            "cwd": "${workspaceFolder}/GameHub",
            "env": {
                "CGO_ENABLED": "0"

            },
            "console": "integratedTerminal",
            "stopOnEntry": true,
            "showLog": true,
            "trace": "verbose",
            "logOutput": "rpc",
            "buildFlags": "-gcflags='all=-N -l'",
            "output": "${workspaceFolder}/GameHub/debug.exe"
        },
        {
            "name": "Attach to GameHub Container",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/app/src",
            "port": 2345,
            "host": "localhost",
            "showLog": true,
            "trace": "verbose",
            "logOutput": "rpc"
        },
        {
            "name": "Test Current Package",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Test Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Launch Full Stack",
            "configurations": [
                "Launch GameHub Server"
            ],
            "preLaunchTask": "start-dependencies",
            "stopAll": true
        },
        {
            "name": "Launch Full Stack (Reset DB)",
            "configurations": [
                "Launch GameHub Server"
            ],
            "preLaunchTask": "reset-and-start-dependencies",
            "stopAll": true
        }
    ]
}
